<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E6F2FD" />
        </shape>
    </item>

    <!-- Grid lines horizontal -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#BBDEFB" android:width="1dp" android:dashGap="10dp" android:dashWidth="10dp" />
        </shape>
    </item>

    <!-- Grid lines vertical -->
    <item>
        <rotate android:fromDegrees="90">
            <shape android:shape="rectangle">
                <stroke android:color="#BBDEFB" android:width="1dp" android:dashGap="10dp" android:dashWidth="10dp" />
            </shape>
        </rotate>
    </item>

    <!-- Hospital icons (simulated as dots) -->
    <item android:left="100dp" android:top="150dp">
        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp" />
            <solid android:color="#F44336" />
        </shape>
    </item>

    <item android:left="250dp" android:top="100dp">
